[alias]
    b = branch -av
    co = checkout
    f = fetch -v
    s = status
    l = log --graph --all --no-color --pretty=format:'%C(blue)%h%C(magenta bold)%d%Creset %s - %an, %ar%Creset' -11
    ll = log --stat --no-color --abbrev-commit
    di = diff --no-prefix -b
[color]
	diff = auto
	status = auto
	branch = auto
[core]
    editor = vim
[pager]
	log = off
    diff = off
[push]
	default = simple
